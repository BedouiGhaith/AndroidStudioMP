            android:name="com.androidproject.app.appcomponents.activities.SignupActivity"
            android:exported="false" />
        <activity
            android:name="com.androidproject.app.appcomponents.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.androidproject.app.appcomponents.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

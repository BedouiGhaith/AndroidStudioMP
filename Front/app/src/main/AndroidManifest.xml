<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/add_to_cart"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/add_to_cart_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules">
        <activity
            android:name=".appcomponents.activities.MyOrderActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.admin.AdminFragmentContainer"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.admin.AdminOrdersFragment"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.admin.AdminProductsFragment"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.admin.AdminUserFragment"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.transporter.OrderFragmentContainer"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.transporter.AllOrdersFragment"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.transporter.PendingOrdersFragment"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.FragmentContainerActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.ProductInfoActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.ProductsFragment"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.ProductsActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.EmailVerify"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.EmailAndAddressActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.EmailActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".appcomponents.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>
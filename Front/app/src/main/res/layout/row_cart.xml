<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5sp">

    <LinearLayout
        android:id="@+id/linearRowmentos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_radius"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_atop"
        android:hapticFeedbackEnabled="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_row_image"
            cornerRadius="@{@dimen/_6pxh}"
            imageRes="@{@drawable/img_image134_80x70}"
            android:layout_width="@dimen/_70pxh"
            android:layout_height="match_parent"
            android:layout_marginStart="16px"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_image134_80x70" />

        <LinearLayout
            android:id="@+id/linearColumnmentos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_weight="0.77"
            android:background="@color/white"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowmentos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_row_name"
                    style="@style/txtOverpasssemibold14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_weight="0.7"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_mentos"
                    tools:text="@string/lbl_mentos" />

                <ImageView
                    android:id="@+id/cart_row_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_169pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_close"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_close" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtBottleof50pe"
                style="@style/txtOverpassregular13_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/msg_bottle_of_50_pe"
                tools:text="@string/msg_bottle_of_50_pe" />

            <LinearLayout
                android:id="@+id/linearRowprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_5pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_row_price"
                    style="@style/txtOverpassbold18_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_25"
                    tools:text="@string/lbl_25" />

                <LinearLayout
                    android:id="@+id/linearRowvector"
                    style="@style/groupStylegray_51cornerRadius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0sp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/cart_row_minus"
                        style="@style/groupStylegreen_50cornerRadius"
                        android:layout_width="@dimen/_32pxh"
                        android:layout_height="@dimen/_32pxv">

                        <ImageView
                            android:id="@+id/imageVector"
                            android:layout_width="@dimen/_12pxh"
                            android:layout_height="@dimen/_1pxh"
                            android:layout_gravity="bottom|center"
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_14pxv"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginBottom="@dimen/_14pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_vector_green_a700"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_vector_green_a700" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/cart_row_quantity"
                        style="@style/txtAbelregular16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_11pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_1"
                        tools:text="@string/lbl_1" />

                    <FrameLayout
                        android:id="@+id/cart_row_plus"
                        style="@style/groupStylegreen_A200cornerRadius"
                        android:layout_width="@dimen/_32pxh"
                        android:layout_height="@dimen/_32pxv"
                        android:layout_marginStart="@dimen/_11pxh">

                        <ImageView
                            android:id="@+id/imagePlusOne"
                            android:layout_width="@dimen/_12pxh"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_10pxh"
                            android:layout_marginVertical="@dimen/_10pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_plus_1"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_plus_1" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

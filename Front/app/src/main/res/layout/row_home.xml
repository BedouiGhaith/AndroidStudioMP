<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="4sp">

    <LinearLayout
        android:id="@+id/linearColumnrectangle927"
        style="@style/groupStylewhite_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameStackrectangle927"
            style="@style/groupStylegray_200cornerRadius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_1pxv">

            <ImageView
                android:id="@+id/item_product_image"
                cornerRadius="@{@dimen/_9pxh}"
                imageRes="@{@drawable/img_rectangle927}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_134pxh"
                android:layout_gravity="center"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="30sp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_rectangle927" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_product_name"
            style="@style/txtOverpassregular13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_70pxh"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/_6pxh"
            android:text="@string/msg_panadol_500mg_1"
            tools:text="@string/msg_panadol_500mg_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearRowdcounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="0sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:id="@+id/item_product_price"
                style="@style/txtOverpassbold16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="@string/lbl_10_d"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/lbl_10_d" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>

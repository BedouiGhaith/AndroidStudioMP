<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout android:id="@+id/frameSplashOne"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylegreen_600">

        <ImageView
            android:id="@+id/imageGroup"
            cornerRadius="@{@dimen/_40pxh}"
            imageRes="@{@drawable/img_group}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:scaleType="fitXY"
            app:tint="#349E38"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_group" />
        <LinearLayout android:id="@+id/linearColumnvolume"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_301pxv"
            android:layout_marginEnd="@dimen/_150pxh"
            android:layout_marginStart="@dimen/_150pxh"
            android:layout_marginTop="@dimen/_301pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_37"
                android:id="@+id/btnVolume"
                android:layout_gravity="start"
                android:layout_height="@dimen/_74pxh"
                android:layout_width="@dimen/_74pxh"
                android:paddingHorizontal="@dimen/_16pxh"
                android:paddingVertical="@dimen/_16pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_volume" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtOPPI"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_11pxh"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/lbl_oppi"
                style="@style/txtAbelregular28" tools:text="@string/lbl_oppi"/>
        </LinearLayout>
    </FrameLayout>
</layout>

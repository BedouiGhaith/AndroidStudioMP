<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:id="@+id/linearRowuser"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageUser"
            android:layout_height="@dimen/_16pxh"
            android:layout_marginBottom="@dimen/_36pxv"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_width="@dimen/_14pxh"
            android:scaleType="fitXY" android:src="@drawable/img_user_1"
            tools:ignore="ContentDescription" tools:src="@drawable/img_user_1"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnlanguage"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_weight="0.94" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtLanguageOne"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:text="@string/msg_with_this_in_mi"
                style="@style/txtOverpassregular14_3" tools:text="@string/msg_with_this_in_mi"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTimeTwo"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/msg_aug_12_2022_at"
                style="@style/txtOverpassregular13_1" tools:text="@string/msg_aug_12_2022_at"/>
        </LinearLayout>
    </LinearLayout>
</layout>
